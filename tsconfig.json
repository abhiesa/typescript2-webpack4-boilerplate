{
    "compilerOptions": {
        "target": "es5",
        "outDir": "./dist/",
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        //"allowJs": true,
        // types option has been previously configured
         "types": [
            // add node as an option
            "node",
            "moment",
            "lodash",
            "assertion-error",
            "chai",
            "jquery",
            "mocha",
            "moment",
            "sinon",
            "tether"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ]
    },
    "exclude": [
        "node_modules"
    ]
}
